---
import Layout from "./Layout.astro";
import { Picture } from "astro:assets";
const { pageTitle } = Astro.props;
import { canPerformAction } from "../utils/roles";

const { user } = Astro.locals

const permissions = canPerformAction(user?.role)
---

<Layout pageTitle={pageTitle}>
  <nav class="w-full bg-white shadow-md">
    <div class="flex justify-between items-center px-6 py-6">
      <ul
        class="flex items-center gap-6"
        x-data="{ current: window.location.pathname }"
      >
        <li>
          <a
            :class="current === '/dashboard/inventories' ? 'underline underline-offset-12 font-bold text-neutral' : 'text-gray-500'"
            href="/dashboard/inventories">Inventories</a
          >
        </li>
        <li>
          <a
            :class="current.includes('/dashboard/projects')  ? 'underline underline-offset-12 font-bold text-neutral' : 'text-gray-500'"
            href="/dashboard/projects">Projects</a
          >
        </li>
        <li>
          <a
            :class="current === '/dashboard/jobs' ? 'underline underline-offset-12 font-bold text-neutral' : 'text-gray-500'"
            href="/dashboard/jobs">Jobs</a
          >
        </li>
        <li>
          <a
            :class="current === '/dashboard/playbooks' ? 'underline underline-offset-12 font-bold text-neutral' : 'text-gray-500'"
            href="/dashboard/playbooks">Playbooks</a
          >
        </li>
        <li>
          <a
            :class="current === '/dashboard/users' ? 'underline underline-offset-12 font-bold text-neutral' : 'text-gray-500'"
            href="/dashboard/users">Users</a
          >
        </li>
      </ul>
      <div class="relative" x-data="{ open: false }">
        <button class="btn btn-ghost flex items-center gap-2" @click="open = !open">
          {user?.avatar && (
            <Picture
              src={user?.avatar as string}
              alt={user?.name as string}
              width="30"
              height="30"
              class="rounded-full"
              quality={100}

            />
          )}
          <span>{user?.name}</span>
          <svg
            class="ml-2 w-4 h-4 transition-transform"
            :class="open ? 'rotate-180' : ''"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        <ul
          class="menu menu-md dropdown-content mt-3 p-2 shadow bg-base-100 rounded-box w-52 absolute right-0 z-50"
          x-show="open"
          x-transition
          @click.outside="open = false"
          x-cloak
        >
          <li>
            <form method="POST" action="/logout">
              <button type="submit">Logout</button>
            </form>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <main class="py-6 px-6 max-w-[1440px] mx-auto">
    <slot name="content" />
  </main>
</Layout>
<slot name="dialog" />
<script is:inline define:vars={{permissions}}>
  document.addEventListener('alpine:init', () => {
    Alpine.store('role', {
      permissions: permissions,
    })
  })
</script>
